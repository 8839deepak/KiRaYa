@model KiRaYa.Models.RoomTable
    @using KiRaYa.Models;
@{List<RoomTable> roomTables = new RoomTable().GetAll();
    RoomTable OBJROOMTABLE = roomTables.Find(x => x.RID == Model.BBID);
    List<BlockBRoom> blockBRooms = new BlockBRoom().GetAll();
    BlockBRoom OBJROOM = blockBRooms.Find(x => x.BBID == OBJROOMTABLE.RID);
    List<BlockC> blockCs = new BlockC().GetAll();
    BlockC OBJBLOCK = blockCs.Find(x => x.CCID == OBJROOM.BBID);
    List<BlockD> blockDs = new BlockD().GetAll();
    BlockD OBKBLOCK = blockDs.Find(x => x.DDID == OBJBLOCK.CCID);
    }
<div class="card">
    <div class="card-header">
        <h4 style="text-align:center;color:#000000">RoomTable</h4>
        <hr />
    </div>
    <div class="card-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.RID)
        <div class="row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.ValidationMessageFor(model => model.RID, "", new { @class = "text-danger" })
            <div class="col-md-4">
                @Html.Label("Block Name")
                @Html.DropDownListFor(model => model.BBID,new SelectList(roomTables,"RID","BBID",Model.BBID),"Select Block",new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.BBID, "", new { @class = "text-danger" })

            </div>

            <div class="col-md-4">
                @Html.LabelFor(model => model.RoomNumber, htmlAttributes: new { @class = "control-label  " })

                @Html.EditorFor(model => model.RoomNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.RoomSIZE, htmlAttributes: new { @class = "control-label  " })

                @Html.EditorFor(model => model.RoomSIZE, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.RoomSIZE, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.ElectriCityCost, htmlAttributes: new { @class = "control-label  " })

                @Html.EditorFor(model => model.ElectriCityCost, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.ElectriCityCost, "", new { @class = "text-danger" })

            </div>

            <div class="col-md-4">
                @Html.LabelFor(model => model.RantAmt, htmlAttributes: new { @class = "control-label  " })

                @Html.EditorFor(model => model.RantAmt, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.RantAmt, "", new { @class = "text-danger" })

            </div>


            <div class=" col-sm-1">
                @Html.Label("SAVE", new { @class = "text-white" })
                <input type="submit" value="SaVe" class="btn btn-success" />
            </div>
        </div>
        }



    </div>
</div>