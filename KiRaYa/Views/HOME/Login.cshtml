@model KiRaYa.Models.Login
@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link href="~/Assests/bootstrap-4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Assests/bootstrap-4.3.1/js/bootstrap.min.js"></script>
    <script src="~/Assests/bootstrap-4.3.1/js/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Assests/bootstrap-4.3.1/js/popper.min.js"></script>
    <!--sql sever -->
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <!--endsql sever -->
    <style>
        body {
            background: -moz-linear-gradient(45deg, rgba(11,5,54,1) 17%, rgba(11,5,54,0.91) 37%, rgba(1,111,118,0.85) 50%, rgba(0,128,128,0.85) 52%, rgba(36,15,168,0.85) 67%); /* ff3.6+ */
            background: -webkit-gradient(linear, left bottom, right top, color-stop(17%, rgba(11,5,54,1)), color-stop(37%, rgba(11,5,54,0.91)), color-stop(50%, rgba(1,111,118,0.85)), color-stop(52%, rgba(0,128,128,0.85)), color-stop(67%, rgba(36,15,168,0.85))); /* safari4+,chrome */
            background: -webkit-linear-gradient(45deg, rgba(11,5,54,1) 17%, rgba(11,5,54,0.91) 37%, rgba(1,111,118,0.85) 50%, rgba(0,128,128,0.85) 52%, rgba(36,15,168,0.85) 67%); /* safari5.1+,chrome10+ */
            background: -o-linear-gradient(45deg, rgba(11,5,54,1) 17%, rgba(11,5,54,0.91) 37%, rgba(1,111,118,0.85) 50%, rgba(0,128,128,0.85) 52%, rgba(36,15,168,0.85) 67%); /* opera 11.10+ */
            background: linear-gradient(45deg, rgba(11,5,54,1) 17%, rgba(11,5,54,0.91) 37%, rgba(1,111,118,0.85) 50%, rgba(0,128,128,0.85) 52%, rgba(36,15,168,0.85) 67%); /* ie10+ */
            background: linear-gradient(45deg, rgba(11,5,54,1) 17%, rgba(11,5,54,0.91) 37%, rgba(1,111,118,0.85) 50%, rgba(0,128,128,0.85) 52%, rgba(36,15,168,0.85) 67%); /* w3c */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#240FA8', endColorstr='#0B0536',GradientType=1 );
            height: 90vh;
        }
    </style>
</head>
<body>
    <div class="row mx-auto">
        <div class="col-md-4">

        </div>
        <div class="col-md-3  p-5 mt-5 pt-5" style="box-shadow:2px 4px 4px black;z-index:1000">
            <div class="text-center"> <img src="~/Image/login.png" style="margin-top:-60px" height="100" width="100" /></div><br />
            <h4 style="text-align:center;color:#000000"><b>Login</b></h4>
            <hr />
            @using (Html.BeginForm(Html.BeginForm("Login", "HOME", FormMethod.Post, new { enctype = "multipart/form-data" })))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label text-white  " })

                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "UserName" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-white  " })

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <h6 style="color:red"> @ViewData["msg"] </h6>
                </div>


                <div class=" form-group">

                    <input type="submit" value="Login" class="btn btn-success" />
                </div>


                <a href="/HOME/forgetPassword" id="2">ForgetPassword</a>


            }
        </div>
       
    </div>
    <div class="col-md-5">

    </div>

</body>
</html>
 