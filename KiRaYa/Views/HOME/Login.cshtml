@{ Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>LoGiN KiRaYa</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
